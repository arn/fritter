<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title>fritter</title>
  <%= stylesheet_link_tag 'scaffold', 'base' %>
</head>
<body>

<div id="main">

  <div id="head">
    <%= render :partial => 'users/user_bar' %>
    <h1>fritter</h1>
  </div> <!-- end id="head" -->
  
  <% if flash[:notice] %>
    <div id="alerts">
      <p style="color: #888;"><%= flash[:notice] %></p>
    </div> <!-- end id="alerts" -->
  <% end %>
  
  <div id="new_message">
    <% form_for @message do |f| %>
      <%= f.error_messages %>
      <%= f.text_area :content, :class => 'new_message' %>
      <br />
      <%= f.submit 'deliver' %>
    <% end %>
  </div> <!-- end id="new_message" -->
  
  <% if controller.action_name == 'index' %>
    <div id="categories">
      <%= render :partial => 'partials/categories_list', :object => @categories %>
    </div> <!-- end id="categories" -->
  <% end %>
  
  <div id="recent_messages">
    <%= yield  %>
  </div> <!-- end id="recent_messages" -->
  
  <div id="foot">
    messenger - licensed under MIT
  </div> <!-- end id="foot" -->
  
</div> <!-- end id="main" -->


</body>
</html>
